  script.
    var socket = io();
    function sendMessageChat(event){
      if (event.keyCode == 13) {
        if($('#chatSending').val()!=""){
          var player="#{username}"+": "+$('#chatSending').val();
          socket.emit('new message', player);
          $('#chatSending').val('');
        }
      }
    }
    socket.on('chat message', function(msg){
        console.log("message received");
        $('#messages-area').append($('<li>').text(msg));
    });
